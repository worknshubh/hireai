<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Circle (Gray Outline) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/> <!-- Transparent Center -->
            <stroke android:width="8dp" android:color="#D3D3D3"/> <!-- Gray Stroke -->
        </shape>
    </item>

    <!-- Progress Arc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="oval">
                <solid android:color="@android:color/transparent"/> <!-- Transparent Center -->
                <stroke android:width="8dp" android:color="#429150"/> <!-- Green Progress Stroke -->
            </shape>
        </clip>
    </item>

</layer-list>
